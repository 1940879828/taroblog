{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["node_modules", "public", ".idea", ".next", "src/lib/ribbon.js"]
  },
  "formatter": {
    "enabled": true,
    "lineEnding": "crlf",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "off"
      },
      "recommended": true,
      "complexity": {
        "noUselessTypeConstraint": "error",
        "noForEach": "off",
        "noBannedTypes": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useArrayLiterals": "off",
        "useHookAtTopLevel": "off",
        "useExhaustiveDependencies": "off",
        "noUnknownProperty": "off"
      },
      "style": {
        "noNamespace": "error",
        "useAsConstAssertion": "error",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noExtraNonNullAssertion": "error",
        "noMisleadingInstantiator": "error",
        "noUnsafeDeclarationMerging": "error",
        "useNamespaceKeyword": "error",
        "noArrayIndexKey": "off",
        "noEmptyBlock": "off"
      }
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "lineWidth": 80
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "double",
      "trailingCommas": "none"
    }
  }
}
